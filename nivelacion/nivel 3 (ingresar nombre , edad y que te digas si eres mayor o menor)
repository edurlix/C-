using System;

namespace nivelacion
{
    class Program
    {
        static void Main(string[] args)
        {
            string nombre;
            int edad;
            Console.Write("Ingrese su nombre: ");
            nombre = Console.ReadLine();
            Console.Write("Ingrese su edad: ");
            edad = Convert.ToInt32(Console.ReadLine());
            if (edad < 18)
            {
                Console.WriteLine("{0}, usted es menor", nombre);
            }
            else
            {
                Console.WriteLine("{0}, usted es mayor", nombre);
            }

        }
    }
}
